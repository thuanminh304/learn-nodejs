<div class="container">
  <h3>Sửa khóa học</h3>

  <form action="/courses/updated/{{course._id}}?_method=PUT" method="POST">
    <div class="form-group">
      <label for="name">Name</label>
      <input
        type="text"
        class="form-control"
        name="name"
        id="name"
        placeholder="Name"
        value="{{course.name}}"
      />
    </div>
    <div class="form-group">
      <label for="description">Description</label>
      <textarea
        class="form-control"
        name="description"
        id="description"
        placeholder="Description"
      >{{course.description}}</textarea>
    </div>
    <div class="form-group">
      <label for="videoId">Video</label>
      <input
        type="text"
        class="form-control"
        name="videoId"
        id="videoId"
        placeholder="Link video"
        value="{{course.videoId}}"
      />
    </div>
    <div class="form-group">
      <label for="level">Level</label>
      <input
        type="text"
        class="form-control"
        name="level"
        id="level"
        placeholder="level"
        value="{{course.level}}"
      />
    </div>

    <button type="submit" class="btn btn-info">Submit</button>

  </form>
</div>