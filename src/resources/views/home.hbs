<div class="container mt-4">
  <div class="row">
    {{! duyệt mảng với each }}
    {{#each courses}}
      <div class="col-sm-6 col-lg-4">
        <div class="card card-course-item">
          <a href="/courses/{{this.slug}}">
            <img
              class="card-img-top"
              src="{{this.image}}"
              alt="{{this.name}}"
            />
          </a>
          <div class="card-body">
            <a href="/courses/{{this.slug}}">
              <h4 class="card-title">{{this.name}}</h4>
            </a>
            <p class="card-text">{{this.description}}</p>
            <a href="/courses/{{this.slug}}">
              <button class="btn btn-info">Xem khóa học</button></a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>

</div>